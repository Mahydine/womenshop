<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mahydine_yanis.womenshop.controller.MainController"
            prefWidth="1280" prefHeight="720">

    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="24"
              style="-fx-background-color: #111827;">
            <padding>
                <Insets top="10" right="24" bottom="10" left="24"/>
            </padding>

            <!-- Titre / logo -->
            <Label text="WomenShop"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Espace entre titre et boutons -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Boutons de navigation -->
            <Button text="Produits"
                    onAction="#showProductList"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: #e5e7eb;
                        -fx-font-size: 13px;
                        -fx-font-weight: 600;
                        -fx-padding: 6 16 6 16;
                        -fx-background-radius: 999;
                        -fx-border-radius: 999;
                    "/>

            <Button text="CatÃ©gories"
                    onAction="#showCategory"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: #e5e7eb;
                        -fx-font-size: 13px;
                        -fx-font-weight: 600;
                        -fx-padding: 6 16 6 16;
                        -fx-background-radius: 999;
                        -fx-border-radius: 999;
                    "/>

            <Button text="Statistiques"
                    onAction="#showStats"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: #e5e7eb;
                        -fx-font-size: 13px;
                        -fx-font-weight: 600;
                        -fx-padding: 6 16 6 16;
                        -fx-background-radius: 999;
                        -fx-border-radius: 999;
                    "/>
        </HBox>
    </top>


    <!-- Contenu des pages -->
    <center>
        <StackPane fx:id="contentPane"/>
    </center>

</BorderPane>
