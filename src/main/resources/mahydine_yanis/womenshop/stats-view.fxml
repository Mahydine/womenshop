<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mahydine_yanis.womenshop.controller.StatsController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Données financières" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="15">
        <Label text="Capital actuel :"/>
        <Label fx:id="capitalLabel" text="0.00"/>

        <Label text="Revenus totaux :"/>
        <Label fx:id="incomeLabel" text="0.00"/>

        <Label text="Coûts totaux :"/>
        <Label fx:id="costLabel" text="0.00"/>
    </HBox>

    <Label text="Historique des opérations" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TableView fx:id="operationTable" prefHeight="500">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date / heure" prefWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="80"/>
            <TableColumn fx:id="productColumn" text="Produit" prefWidth="150"/>
            <TableColumn fx:id="quantityColumn" text="Quantité" prefWidth="80"/>
            <TableColumn fx:id="unitPriceColumn" text="Prix unitaire" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Montant" prefWidth="100"/>
            <TableColumn fx:id="balanceBeforeColumn" text="Solde avant" prefWidth="120"/>
            <TableColumn fx:id="balanceAfterColumn" text="Solde après" prefWidth="120"/>
        </columns>
    </TableView>

</VBox>
